@model IEnumerable<MvcMSFootball.Models.Match>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th>
            Home Team
        </th>
        <th>
            Away Team
        </th>
        <th>
            Home Goals
        </th>
        <th>
            Away Goals
        </th>
        <th>
            Date
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.HomeTeamName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AwayTeamName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.HomeGoals)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AwayGoals)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Date)
        </td>
        <td>
            <!-- @Html.ActionLink("Edit", "Edit", new { id=item.ID }) -->
            @Html.ActionLink("Details", "Details", new { id=item.ID })
            
        </td>
    </tr>
}

</table>
